<% unless (@wiki.private? && current_user.id != @wiki.user_id) %>
  <h1><%= markdown @wiki.title %></h1>
    <div class="col-md-8">
      <p><%= markdown @wiki.body %></p>

      <p>
        <% if policy(@wiki).update? %>
          <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
        <% end %>
      </p>

    </div>
<% else %>
  This is a private Wiki, not available for public viewing
<% end %>